body{margin:0;padding:0;font-family:cabin;font-size:1.2em;color:#555}header{position:fixed;top:0;width:100%;background:#674b98;padding:10px;box-sizing:border-box;box-shadow:0 1px 3px rgba(100,100,100,.5);z-index:2}header .fas{display:inline-block;color:#63e1d4;font-size:25px;cursor:pointer}header .fas:hover{color:#8ee9e0}header button#menu-toggle{position:relative;top:-10px;background:0 0;border:0}header nav#menu{display:block;position:absolute;top:0;left:0;width:100%;height:100vh;max-height:100vh;padding:65px 0 0;background:#473469;transform:translate(-100%,0);transition:transform 200ms ease-out;z-index:1000;box-sizing:border-box;overflow:scroll}header nav#menu i#menu-close{position:fixed;top:17px;right:20px;font-size:30px}header nav#menu:hover{color:#8ee9e0}header nav#menu a{display:block;padding:20px;color:#63e1d4;font-size:20px;text-align:center;text-decoration:none;font-weight:600}header nav#menu a:hover{background:#674b98}header nav#menu .children>a{padding:10px;font-size:18px;font-weight:400}header nav#menu.visible{transform:translate(0,0);transition:transform 200ms ease-out}header img{padding:5px 10px}div.nav-overlay{position:absolute;top:0;left:0;background:rgba(0,0,0,.5);height:100vh;width:100vw;z-index:-1;opacity:0%;transform:translate(-100%,0)}div.nav-overlay.visible{opacity:100%;z-index:500;transform:translate(0,0);transition:opacity 200ms ease-in}@media screen and (min-device-width:1000px) and (orientation:landscape){header nav#menu{width:400px}header nav#menu a{padding-left:30px;text-align:left}header nav#menu .children>a{padding-left:50px}}section#index-image{background:url(/index.jpg);background-size:cover;background-attachment:fixed;height:100vh;margin:0;padding:0}section#index-image div.bottom{position:absolute;bottom:50px;left:0;padding:75px}section#index-image div.bottom h1{font-family:merriweather;font-size:50px;color:#63e1d4;margin:0;padding:20px 0}section#index-image div.bottom span{font-family:cabin;font-size:25px;color:#63e1d4}section#features{padding:75px}section#features div.feature{padding-bottom:50px}section#features div.feature i.fa-solid{color:#9c86c3;font-size:50px}section#features div.feature h2{font-family:merriweather,Sans;color:#674b98;font-size:25px;margin:25px 0 10px}@media screen and (min-device-width:1000px) and (orientation:landscape){section#features{column-count:3}section#features div.feature{text-align:center}}section#book{background:#8ee9e0;padding:100px 75px;position:relative}section#book h2{font-family:merriweather;color:#473469;padding-top:25px}@media screen and (min-device-width:1000px) and (orientation:landscape){section#book{overflow:hidden}section#book img{position:absolute;top:50px}section#book h2{position:absolute;top:50px;left:275px}}section#main{max-width:1000px;margin:65px auto 0;padding:75px 50px;min-height:50vh}section#main h1,section#main h2,section#main h3,section#main h4,section#main h5,section#main h6{font-family:merriweather,Serif;color:#674b98}section#main h1{font-size:2em;margin-top:0;padding-bottom:20px;border-bottom:2px solid #f0ecf6}section#main a{color:#24baab}section#main a:hover{color:#63e1d4;text-decoration:none}section#main .article h1{font-size:1.5em;margin:30px 0;border-bottom:0}section#main .article h2{font-size:1.4em;font-style:italic}section#main .article h3{font-size:1.2em;color:#888}section#main .tagline{font-family:merriweather,Serif;font-size:1.3em;font-style:italic;color:#888;margin:15px 0}section#main .modified{font-size:.8em;color:#888}footer{background:#473469;padding:75px;text-align:center;color:#fff}